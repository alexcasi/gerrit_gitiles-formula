# -*- coding: utf-8 -*-
# vim: ft=jinja

{% import_yaml 'gerrit_gitiles/defaults.yml' as defaults %}
{% import_yaml 'gerrit_gitiles/osmap.yml' as osmap %}

{# get the settings for the os_family grain #}
{% set osfam = salt['grains.filter_by'](osmap) or {} %}

{# merge the os family/codename specific data over the defaults #}
{% do defaults.gerrit_gitiles.update(osfam) %}

{# merge the pillar:lookup dict into the defaults/os specific dict #}
{% set lookup = salt['pillar.get']('gerrit_gitiles:lookup',
                                   default=defaults.gerrit_gitiles,
                                   merge=True) %}

{# merge the actual gerrit_gitiles pillar into the above combined dict #}
{% set gerrit_gitiles = salt['pillar.get']('gerrit_gitiles', default=lookup, merge=True) %}
